{
  "compilerOptions": {
    "target": "ES6",

    "module": "System",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",

    "strict": true,                                      
    "skipLibCheck": true,    

    "baseUrl": "./",                                    
    "paths": {
      "@/*": ["./src/*"]
    } 
  }
}